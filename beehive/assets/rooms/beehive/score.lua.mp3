function init()
    pStart = mgGetBool("start", true)
    pEnd = mgGetBool("end", true)
    
	mgFogColor(0.95, 0.81, 0.43, 0.63, 0.52, 0.14)
	mgMusic("25")
	mgParticles("lowrising")
	
	confSegment("beehive/score/score", 1)
	confSegment("beehive/score/scorex", 1)
	confSegment("beehive/score/score2", 1)
    confSegment("beehive/score/score3", 1)
    confSegment("beehive/score/score4", 1)
	
	l = 0
    
    if pStart then
        l = l + mgSegment("beehive/bee_starting", -l)
    end

	local targetLen = 180 
	while l < targetLen do
		s = nextSegment()
		l = l + mgSegment(s, -l)	
	end
    
    if pEnd then
        l = l + mgSegment("beehive/bee_door", -l)
    end
    
	mgLength(l)
end

function tick()
end
