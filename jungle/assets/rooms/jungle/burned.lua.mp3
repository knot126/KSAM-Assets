function init()
	pStart = mgGetBool("start", true)
	pEnd = mgGetBool("end", true)
	
	mgMusic("33")
	mgReverb(0.2, 0.8, 0.3)
	mgEcho(0.3, 0.2, 0.5, 0.5)
	mgFogColor(0.83, 0.96, 1.0, 0.37, 0.73, 0.82)
	mgGravity(0.65)
	
	confSegment("jungle/burned/16_0", 1)
	confSegment("jungle/burned/16_1", 1)
	confSegment("jungle/burned/16_2", 1)
	
	l = 0
	
	if pStart then
		l = l + mgSegment("jungle/burned/start", -l)	
	end
	
	local targetLen = 270
	while l < targetLen do
		s = nextSegment()
		l = l + mgSegment(s, -l)
	end
	
	if pEnd then
		l = l + mgSegment("jungle/burned/door", -l)	
	end
	
	mgLength(l)
end

function tick()
end
